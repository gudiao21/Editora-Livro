<%= form_with(model: @supplier) do |form| %>
  <% if @supplier.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(supplier.errors.count, "error") %> prohibited this supplier from being saved:</h2>

      <ul>
        <% supplier.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, t('views.suppliers.form.supplier_name'), style: "display: block" %>
    <%= form.text_field :name %>
  </div>

<br>

  <div>
    <%= form.label :cnpj, 'CNPJ', style: "display: block" %>
    <%= form.text_field :cnpj %>
  </div>

<br>

  <% if @supplier.account.present? %>
    <div>
      <%= form.label :account_number, t('views.suppliers.form.supplier_account_number'), style: "display: block" %>
      <%= form.text_field :account_number, value: account.account_number %>
    </div>

    <div>
      <%= form.label :digit, t('views.suppliers.form.supplier_account_digit'), style: "display: block" %>
      <%= form.text_field :digit, value: account.digit %>
    </div>
  <% end %>

  <div>
    <%= form.submit @supplier.persisted? ? t('views.suppliers.form.update') : t('views.suppliers.form.create'), class: (@supplier.persisted? ? "bg-yellow-500 text-white font-bold py-2 px-4 rounded-full cursor-pointer" : "bg-green-500 text-white font-bold py-2 px-4 rounded-full cursor-pointer") %>
  </div>
<% end %>
