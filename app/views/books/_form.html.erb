<%= form_with(model: @book) do |form| %>
  <% if @book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@book.errors.count, "error") %> <%= t('views.books.form.prohibited_be_saved') %>:</h2>

      <ul>
        <% @book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, t('views.books.form.title'), style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <br>

  <div>
    <%= form.label :author_id, t('views.books.form.author_id'), style: "display: block" %>
    <%= form.collection_select :author_id, Author.all, :id, :name %>
  </div>

<br>

  <div>
    <%= form.label :isbn,  'ISBN', style: "display: block" %>
    <%= form.text_field :isbn %>
  </div>

  <div>
    <%= form.submit @book.persisted? ? t('views.books.form.update') : t('views.books.form.create'), class: (@book.persisted? ? "bg-yellow-500 text-white font-bold py-2 px-4 rounded-full cursor-pointer" : "bg-green-500 text-white font-bold py-2 px-4 rounded-full cursor-pointer") %>
  </div>
<% end %>